define(['jquery','underscore','mage/translate','jquery/ui','jquery/jquery.parsequery','Magento_Swatches/js/swatch-renderer'],function($,_,$t){'use strict';$.widget('kt.SwatchRendererGradient',$.mage.SwatchRenderer,{_plural:function(number,forms){var one=forms[0],two=forms[1],five=forms[2];var n=Math.abs(number);n%=100;if(n>=5&&n<=20){return five;}
n%=10;if(n===1){return one;}
if(n>=2&&n<=4){return two;}
return five;},_RenderSwatchOptions:function(config){var html=this._super(config);var moreLimit=parseInt(this.options.numberToShow,10);var count=parseInt(config.options.length-moreLimit,10),labelText;if(config.options.length>=moreLimit&&count>0){labelText=this._plural(count,$t("more %s tone,more %s tones,more %s tones").split(','));this.labelEl=$('<div class="swatch-label-count">%labelText</div>'.replace('%labelText',labelText.replace('%s',count)));}
return html;},_RenderControls:function(){this._super();if(this.labelEl!==undefined){this.labelEl.insertAfter(this.element.find('.swatch-attribute-options'));}},_EnableProductMediaLoader:function($this){var $widget=this;if($('body.catalog-product-view').size()>0){$this.parents('.column.main').find('.photo.image').addClass($widget.options.classes.loader);}},_DisableProductMediaLoader:function($this){var $widget=this;if($('body.catalog-product-view').size()>0){$this.parents('.column.main').find('.photo.image').removeClass($widget.options.classes.loader);}},_ProductMediaCallback:function($this,response,isInProductView){if($this===undefined){return false;}
var isProductViewExist=$('body.catalog-product-view').size()>0,$main=isProductViewExist?$this.parents('.column.main'):$this.parents('.product-item-info'),images=[],support=function(e){return e.hasOwnProperty('large')&&e.hasOwnProperty('medium')&&e.hasOwnProperty('small');};this._super($this,response,isInProductView);if($('body.catalog-product-view').size()>0){this.updateBaseImage(images,$main,isProductViewExist);}
images.push({full:response.large,img:response.medium,thumb:response.small,isMain:true});},_RenderFormInput:function(config){var msgTxt=$t("Please select");return'<input class="'+this.options.classes.attributeInput+' super-attribute-select" '+'name="super_attribute['+config.id+']" '+'type="text" '+'value="" '+'data-selector="super_attribute['+config.id+']" '+'data-validate="{required:true}" '+'data-msg-required="'+msgTxt+' '+config.label+'" '+'aria-required="true" '+'aria-invalid="true" '+'style="visibility: hidden; position:absolute; left:-1000px">';}});return $.kt.SwatchRendererGradient;});